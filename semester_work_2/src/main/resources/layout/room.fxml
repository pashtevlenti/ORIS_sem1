<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>

<?import javafx.scene.text.Text?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.itis.controller.RoomController" stylesheets="@../styles/style.css" styleClass="stack-pane">
    <VBox alignment="CENTER" spacing="30">
        <Text text="Enter room name" styleClass="text"/>
        <TextField fx:id="roomNameField" promptText="Enter room name" styleClass="text-field"/>
        <Button text="Join Room" onAction="#handleJoinRoomButtonAction" styleClass="button"/>
    </VBox>
</StackPane>
